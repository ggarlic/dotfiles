set editor="/usr/local/bin/mvim -f"
set visualbell
hi Bell display: none;
set wildmode="list:full"
set complete+=suggestion
set maxitems=8

"loadplugins '\.(js|penta)$'

map <silent> <F2> : set go!=T <CR>

"Next Page and Previous Page超级的下一页,基本上是够用了.快捷键是[[和]]
set nextpattern=\s*下一页|下一张|下一篇|下页|后页\s*,^\bnext\b,\\bnext\\b,^>$,^(>>|»)$,^(>|»),(>|»)$,\\bmore\\b
set nextpattern=\s*上一页|上一张|上一篇|上页|前页\s*,^\bprev|previous\b,\\bprev|previous\\b,^<$,^(<<|«)$,^(<|«),(<|«)$

map -builtin j 5j
map -builtin k 5k
map -builtin m :tabprevious<CR>
map -builtin , :tabnext<CR>

autocmd LocationChange ^https?://mail\.google\.com/ :normal! <C-z>
autocmd LocationChange ^https?://digg\.com\/reader\/ :normal! <C-z>

com! fyd :o javascript:%20void((function()%20{var%20element%20=%20document.createElement('script');element.id%20=%20'outfox_seed_js';element.charset%20=%20'utf-8',element.setAttribute('src',%20'http://fanyi.youdao.com/web2/seed.js?'%20+%20Date.parse(new%20Date()));document.body.appendChild(element);})())

set hintkeys=asdfjkl;
